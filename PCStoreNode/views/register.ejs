<!DOCTYPE html>
<html>
	<head>
		<%- include("./partials/header"); %>
	</head>
	<body>
		<%- include("./partials/navbar"); %>

		<div class="content-section">
			<section class="container">
				<div class="container">
					<div class="col-6">
						<h3>Register a new user</h3>
						<form id="register-form" action="." method="POST">
							<div class="form-group">
								<label for="username">Username</label>
								<input
									id="form-username"
									name="username"
									class="form-control"
									type="text"
									placeholder="Your Username"
									required
								/>
							</div>

							<div class="form-group">
								<label for="firstname">First Name</label>
								<input
									id="form-firstname"
									name="first_name"
									class="form-control"
									type="text"
									required
								/>
							</div>

							<div class="form-group">
								<label for="lastname">Last Name</label>
								<input
									id="form-lastname"
									name="last_name"
									class="form-control"
									type="text"
									placeholder="Doe"
									required
								/>
							</div>

							<div class="form-group">
								<label for="email">Email</label>
								<input
									id="form-email"
									name="email"
									type="email"
									class="form-control"
									required
								/>
							</div>

							<div class="form-group">
								<label for="contactnumber">Contact Number</label>
								<input
									id="form-number"
									name="contactNum"
									class="form-control"
									type="tel"
									placeholder="i.e,. 08XXXXXXXX"
									pattern="[0-9]{10}"
									required
								/>
							</div>

							<div class="form-group">
								<label for="password">Password</label>
								<input
									id="form-password"
									name="password"
									class="form-control"
									type="password"
									placeholder="Your password"
									required
								/>
							</div>

							<div class="form-group">
								<label for="passwordconf">Password Confirmation</label>
								<input
									id="form-passwordconf"
									name="passwordconf"
									class="form-control"
									type="password"
									placeholder="Re-enter your password"
									required
								/>
							</div>
							<br />
							<input type="submit" value="Confirm" />
						</form>
					</div>
				</div>
				<br />
			</section>
			<%- include("./partials/footer"); %>
		</div>
	</body>

	<script>
		let registerform = document.getElementById("register-form");
		registerform.addEventListener("submit", (event) => {
			event.preventDefault();

			let user = document.getElementById("form-username").value;
			let fn = document.getElementById("form-firstname").value;
			let ln = document.getElementById("form-lastname").value;
			let emailInp = document.getElementById("form-email").value;
			let number = document.getElementById("form-number").value;
			let pass = document.getElementById("form-password").value;
			let passconf = document.getElementById("form-passwordconf").value;
			console.log(pass.length);

			if (pass.length < 8) {
				alert("Password must have 8 or more characters!");
			} else if (pass != passconf) {
				alert("Password must be the same!");
			} else {
				alert("Account created!");

				fetch("http://localhost:8000/account/register/", {
					method: "POST",
					headers: {
						Accept: "application/json",
						"Content-Type": "application/json",
						// 'Authorization': `Token ${auth_token}`
					},
					body: JSON.stringify({
						username: user,
						first_name: fn,
						last_name: ln,
						email: emailInp,
						contactNum: number,
						password: pass,
					}),
				});

				window.location.replace("/");
			}
		});

		if (sessionStorage.getItem("Token") != null || sessionStorage.getItem("Token") != undefined) {
			let log = document.getElementById("login-logout")
			log.innerHTML = "Logout"
			log.href = "/account/logout"

			let ac = document.getElementById("account-register")
			ac.innerHTML = "Account"
			ac.href = "/account/"
		}
	</script>
</html>
